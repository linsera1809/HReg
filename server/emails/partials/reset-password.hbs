<!-- BOBBY: VALIDATION NEEDED -->
{{#if hasAccount}}
  <table border="0" cellspacing="0" cellpadding="0">
    <!-- Header -->
    <tr>
      <td align="center">
        <h1 style="margin: 20px 0px;">Reset Account Password</h1>
        <hr>
      </td>
    </tr>

    <!-- First Section -->
    <tr>
      <td>
        <p style="margin-top: 20px;">Hi {{name}}</p>
        <p>We received a request to reset your password. Use the button below to reset it. <strong>This password reset is only valid until {{resetExpires}}.</strong></p>
      </td>
    </tr>

    <!-- Button -->
    <tr>
      <td align="center">
        <a href="https://{{domainName}}/reset-password?email={{userEmail}}&hash={{resetHash}}" target="_blank" style="margin: 20px 0px; background-color: #353382; border-radius: 3px; color: #ffffff; text-decoration: none; padding: 12px 18px; display: inline-block;">Reset Password</a>
      </td>
    </tr>

    <!-- Second Section -->
    <tr>
      <td>
        <p style="font-size:9pt"><br><br>If you did not request a password reset, please ignore this email.</p>
        <p style="font-size:9pt">
          Thanks,<br>
          The Hackathon Team
        </p>
      </td>
    </tr>

    <!-- Footer needs correct links (BL) -->
    <tr>
      <td align="center"><hr>
      <p style="font-size:8px">
           Need assistance? Want to know more about Nationwide's Hackathon? <br>
           Find us at <a href="https://onyourside.sharepoint.com/sites/Hackathon">our SharePoint Online site</a> or follow us on <a href="https://www.yammer.com/nationwide.com/#/threads/inGroup?type=in_group&feedId=6066781">Yammer</a>
        </p>
    </td>
    </tr>
 </table>

 <!-- IF NO ACCOUNT EXISTS, SEND THIS EMAIL -->
{{else}}
<table border="0" cellspacing="0" cellpadding="0">
  <!-- Header -->
  <tr>
    <td align="center">
      <h1 style="margin: 20px 0px;">Reset Account Password</h1>
      <hr>
    </td>
  </tr>

  <!-- First Section -->
  <tr>
    <td>
      <p>We received a request to reset the password associated with your email address, {{userEmail}}, but we were unable to find an account associated with this address.</p>
    </td>
  </tr>

  <!-- Buttons -->
  <tr>
    <td align="center">
      <a href="https://{{domainName}}/forgot-password" target="_blank" style="margin: 20px 0px; background-color: #353382; border-radius: 3px; color: #ffffff; text-decoration: none; padding: 12px 18px; display: inline-block;">Try a Different Email</a>
      <a href="https://{{domainName}}/create-account" target="_blank" style="margin: 20px 0px; background-color: #353382; border-radius: 3px; color: #ffffff; text-decoration: none; padding: 12px 18px; display: inline-block;">Create New Account</a>
    </td>
  </tr>

  <!-- Second Section -->
  <tr>
    <td>
      <p style="font-size:9pt"><br><br>If you did not request a password reset, please ignore this email.</p>
      <p style="font-size:9pt">
        Thanks,<br>
        The Hackathon Team
      </p>
    </td>
  </tr>

  <!-- Footer needs correct links (BL) -->
  <tr>
    <td align="center"><hr>
    <p style="font-size:8px">
         Need assistance? Want to know more about Nationwide's Hackathon? <br>
         Find us at <a href="https://onyourside.sharepoint.com/sites/Hackathon">our SharePoint Online site</a> or follow us on <a href="https://www.yammer.com/nationwide.com/#/threads/inGroup?type=in_group&feedId=6066781">Yammer</a>
      </p>
  </td>
  </tr>
</table>
